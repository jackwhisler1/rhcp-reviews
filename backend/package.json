{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "ts-node prisma/seed.js",
    "test": "NODE_ENV=test jest --watchAll --detectOpenHandles --forceExit",
    "test:ci": "NODE_ENV=test jest --ci --runInBand --forceExit",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:e2e": "NODE_ENV=test jest tests/e2e/*.test.ts --forceExit",
    "test:unit": "NODE_ENV=test jest tests/unit/*.test.ts",
    "pretest": "tsc --noEmit && npm run lint",
    "posttest": "npm run test:cov",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },"jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "setupFilesAfterEnv": ["./tests/jest.setup.ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@prisma/client": "^6.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.10",
    "typescript": "^5.7.3"
  }
}
