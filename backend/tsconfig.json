{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "baseUrl": ".",    
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true, 
    "resolveJsonModule": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}