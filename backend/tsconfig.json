{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["express"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
